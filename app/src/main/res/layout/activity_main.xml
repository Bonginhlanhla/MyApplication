<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hsky"
    tools:context="com.example.admin.myapplication.MainActivity">


    <RelativeLayout
        android:layout_width="568dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="97dp"
        tools:layout_editor_absoluteX="8dp"
        android:id="@+id/linearLayout2"
        android:layout_marginTop="134dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <ImageButton
            android:id="@+id/imgRest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="53dp"
            android:layout_marginStart="53dp"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/fastfood" />

        <ImageButton
            android:id="@+id/imgHotels"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/hotelsign"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <ImageButton
            android:id="@+id/imgCarservice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="38dp"
            android:layout_marginStart="38dp"
            android:layout_toEndOf="@+id/imgHotels"
            android:layout_toRightOf="@+id/imgHotels"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/carrepair" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="568dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="97dp"
        tools:layout_editor_absoluteX="8dp"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout">

        <ImageButton
            android:id="@+id/imgGas_Station"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="53dp"
            android:layout_marginStart="53dp"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/gasstation" />

        <ImageButton
            android:id="@+id/imgHospital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/firstaidkit"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <ImageButton
            android:id="@+id/imgShoppMall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="39dp"
            android:layout_marginStart="39dp"
            android:layout_toEndOf="@+id/imgHospital"
            android:layout_toRightOf="@+id/imgHospital"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/shopping" />

    </RelativeLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/relativeLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="75dp"
        android:layout_marginLeft="45dp"
        android:layout_marginStart="45dp"
        android:text="Resturant"
        android:textColor="@android:color/background_light" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView"
        android:layout_centerHorizontal="true"
        android:text="Hotels"
        android:textColor="@android:color/background_light" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView2"
        android:layout_marginLeft="43dp"
        android:layout_marginStart="43dp"
        android:layout_toEndOf="@+id/textView2"
        android:layout_toRightOf="@+id/textView2"
        android:text="Car Services"
        android:textColor="@android:color/background_light" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/linearLayout2"
        android:layout_marginTop="12dp"
        android:text="Gas Station"
        android:textColor="@android:color/background_light" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView4"
        android:layout_toLeftOf="@+id/textView3"
        android:layout_toStartOf="@+id/textView3"
        android:text="Hospital"
        android:textColor="@android:color/background_light" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_alignTop="@+id/textView5"
        android:text="Shopping Mall"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="336dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnRetrive"
        android:layout_alignStart="@+id/btnRetrive"
        android:layout_below="@+id/relativeLayout"
        android:layout_marginTop="19dp"
        android:alpha="0.35"
        android:background="@android:color/holo_blue_light"
        android:text="Register "
        android:textColor="?android:attr/colorForegroundInverse"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnRetrive"
        android:layout_width="336dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnAdd"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:alpha="0.35"
        android:background="@android:color/holo_blue_light"
        android:text="Login"
        android:textColor="?android:attr/textColorPrimaryInverseNoDisable"
        android:textStyle="bold" />


</RelativeLayout>
